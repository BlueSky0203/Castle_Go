{
    "swagger": "2.0",
    "info": {
        "contact": {}
    },
    "paths": {
        "/upload": {
            "post": {
                "description": "上傳一張圖片並上傳至 Cloudinary，回傳圖片 URL",
                "consumes": [
                    "multipart/form-data"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "圖片上傳"
                ],
                "summary": "上傳城堡圖片",
                "parameters": [
                    {
                        "type": "file",
                        "description": "要上傳的圖片",
                        "name": "image",
                        "in": "formData",
                        "required": true
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "type": "object",
                            "additionalProperties": true
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    },
                    "500": {
                        "description": "Internal Server Error",
                        "schema": {
                            "type": "object",
                            "additionalProperties": {
                                "type": "string"
                            }
                        }
                    }
                }
            }
        }
    }
}